<%- model_class = @user.class -%>
<div class="row">
	<div class="span10">
		<h1><%= @user.login %>'s profile</h1>
		<br />
		<table class="table table-condensed table-striped">
			<tr>
				<th>Forum topics: </th>
				<td><%= @user.topics.count %></td>
			</tr>
			<tr>
				<th>Forum messages: </th>
				<td><%= @user.messages.count %></td>
			</tr>
			<tr>
				<th>Role: </th>
				<td><%= @user.role.name %></td>
			</tr>
			<tr>
				<th>Join date: </th>
				<td><%= ftime(@user.created_at) %></td>
			</tr>
			<tr>
				<th>Last visit: </th>
				<td><%= ftime(@user.current_login_at) %></td>
			</tr>
			<% if @current_user %>
			<% if @current_user.admin? %>
			<tr>
				<th>Email: </th>
				<td><%= @user.email %></td>
			</tr>
			<tr>
				<th>Last IP: </th>
				<td><%= @user.current_login_ip %></td>
			</tr>
			<% end %>
			<% end %>
		</table>
	</div>
	<div class="span2">
		<img class="skin" src="http://www.minecraft.net/skin/<%= @user.login %>.png"/>
		<script type="text/javascript">
        renderMCSkins('skin', 4);
		</script>
	</div>
</div>
		
