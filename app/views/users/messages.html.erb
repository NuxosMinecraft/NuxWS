<%- model_class = Message.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %> of <%= @user.login %></h1>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:topic) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
       <td><%= link_to message.topic.title, forum_topic_path(message.topic.forum, message.topic, :anchor => "msg_id_#{message.id}")%></td>
        <td><%= link_to message.topic.title, forum_topic_path(message.topic.forum, message.topic) %></td>
        <td><%= ftime(message.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @messages %>
