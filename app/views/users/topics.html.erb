<%- model_class = Topic.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %> of <%= @user.login %></h1>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, forum_topic_path(topic.forum, topic) %></td>
        <td><%= ftime(topic.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @topics %>
