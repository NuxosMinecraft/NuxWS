<div class="row">
	<div class="span3"><h1><%= @gallery.title %></h1></div>
	<div class="span2 offset7">
		<%= link_to "Editer", edit_gallery_path(@gallery), :class => "btn" if can?(:edit, Gallery) %>
	</div>
</div>

<br />

<%- @images.each do |image| %>
<div class="row gallery_element">
	<div class="span9">
		<h4>&raquo; <%= link_to image.title, gallery_image_path(@gallery, image) %></h4>
		<small><%= image.description %></small>
		<br />
		<%= image_tag image.picture.thumb.url %>
	</div>
</div>
<%- if @images.count > 0 %>
<div class="forums-separator"></div>
<% end %>
<% end %>
