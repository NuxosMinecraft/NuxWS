<%- model_class = Log.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:message) %></th>
      <th><%= model_class.human_attribute_name(:relations) %></th>	 
    </tr>
  </thead>
  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.category %></td>
		<td><%= log.priority %></td>
		<td><%= ftime(log.created_at) %></td>
		<td><%= log.message %></td>
		<td>
			<%- log.relations.each do |model, id| %>
			<%- if model == :user_id %>
			<%- user = User.find_by_id(id) %>
			<%= link_to user.login, user if user%>
			<%- elsif model == :doc_id %>
			<%- doc = Doc.find_by_id(id) %>
			<% if doc %>
			<%= link_to doc.title, doc if doc%>
			<% else %>
			<i>deleted</i>
			<% end %>
			<%- elsif model == :place_id %>
			<%- place = Place.find_by_id(id) %>
			<% if place %>
			<%= link_to place.name, place if place%>
			<% else %>
			<i>deleted</i>
			<% end %>
			<% end %>
			&nbsp;
			<% end %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @logs %>

