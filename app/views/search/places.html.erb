<%- model_class = Place.new.class -%>
<h1>Places search</h1>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= link_to place.name, place_path(place) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @places %>

