<%- model_class = Image.new.class -%>
<h1>Images search</h1>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= link_to image.title, gallery_image_path(image.gallery, image) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @images %>

