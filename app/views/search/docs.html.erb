<%- model_class = Doc.new.class -%>
<h1>Documents search</h1>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @docs.each do |doc| %>
      <tr>
        <td><%= link_to doc.title, doc_path(doc) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @docs %>

