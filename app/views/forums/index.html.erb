<div class="row">
	<div class="span2"><h1>Les forums</h1></div>
	<div class="span2 offset8">
		<%= link_to "CrÃ©er un forum", new_forum_path, :class => "btn btn-mini" if can?(:create, Forum) %>
	</div>
</div>

<br />

<%- @categories.each do |category| %>

<% if category.forums.count > 0 %>

<div class="page-header">
	<h2><%= category.name %></h2>
</div>

<%- category.forums.each do |forum| %>
<div class="row forum_element">
	<div class="span9">
		<div class="fe_title">
		<h3>&raquo; <%= link_to forum.title, forum_topics_path(forum) %></h3>
		<small><%= forum.description %></small>
		</div>
	</div>
	<div class="span3">
		<div class="fe_facts">
		Posts: <%= forum.topics.count %>
		<br />
		<%- if forum.topics.last %>
		Dernier: <%= link_to forum.topics.last.title, forum_topic_path(forum, forum.topics.last) %>
		<% end %>
		</div>
	</div>
</div>
<%- if @forums.count > 0 %>
<div class="forums-separator"></div>
<% end %>
<% end %>

<% end %>

<br />
<br />


<% end %>
