<div class="row">
	<div class="span10">
		<h1><%= @doc.title %></h1>
	</div>
	<div class="span2">
		<%= link_to content_tag(:i, "", :class => "icon-pencil") + " Ã‰diter", edit_doc_path(@doc), :class => "btn btn-mini" if can?(:edit, @doc) %>
