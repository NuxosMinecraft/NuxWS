<%- model_class = ForumCategory.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
	  <th><%= model_class.human_attribute_name(:position) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @forum_categories.each do |fc| %>
      <tr>
        <td><%= fc.name %></td>
		<td><%= fc.position %></td>
        <% if can? :edit, fc or can? :destroy, fc %>
          <td>
            <% if can? :edit, fc %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_forum_category_path(fc), :class => 'btn btn-mini' %>
            <% end %>
            <% if can? :destroy, fc %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  forum_category_path(fc),
                  :method => :delete,
                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                  :class => 'btn btn-mini btn-danger' %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New category", new_forum_category_path, :class => "btn btn-mini" if can?(:create, ForumCategory) %>
