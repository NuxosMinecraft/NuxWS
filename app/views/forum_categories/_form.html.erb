<%= form_for @forum_category, :html => { :class => 'form-horizontal well' } do |f| %>
  <% if @forum_category.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@forum_category.errors.count, "error") %> prohibited this forum category from being saved:</h3>

      <ul>
		  <% @forum_category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :position, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :position, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary btn-mini' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                forum_categories_path, :class => 'btn btn-mini' %>
  </div>
<% end %>
