<%- model_class = Place.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:short_description) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
		<td><%= place.short_description %></td>
        <% if can? :edit, place or can? :destroy, place %>
          <td>
            <% if can? :edit, place %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_user_path(place), :class => 'btn btn-mini' %>
            <% end %>
            <% if can? :destroy, place %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  user_path(place),
                  :method => :delete,
                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                  :class => 'btn btn-mini btn-danger' %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

