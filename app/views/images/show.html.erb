<div class="row">
	<div class="span10">
		<h1><%= link_to @image.gallery.title, @image.gallery %> &raquo; <small><%= @image.title %></small></h1>
	</div>
</div>
<br />

<div class="row">
	<div class="span12">
		<%= t '.direct_link' %> <%= link_to t('.size', :size => t('.full')), @image.picture.url, :class => "btn btn-mini" %>
		<br />
		<%= image_tag @image.picture.url %>
	</div>
</div>

<br />

<div class="row">
	<div class="span12">
		<ul class="thumbnails">
			<%- [:normal, :small, :thumb].each do |size| %>
			<li class="span3">
				<div class="thumbnail">
					<%= image_tag @image.picture.url(size) %>
					<div class="caption">
						<%= t '.direct_link' %> <%= link_to t('.size', :size => t('.' + size.to_s)), @image.picture.url(size), :class => "btn btn-mini" %>
					</div>
				</div>
			</li>
			<% end %>
		</ul>
	</div>
</div>

